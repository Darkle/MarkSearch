header.navHeader
  nav(role='banner')
    .brandLogo
      a(href='/', title="MarkSearch Home Page")
        if bodyClass === 'settingsPage'
          h1.brandLogoLarge MarkSearch Settings
        else if bodyClass === 'helpPage'
          h1.brandLogoLarge MarkSearch Help
        else if bodyClass === 'aboutPage'
          h1.brandLogoLarge About MarkSearch
        else
          h1.brandLogoLarge MarkSearch
        h1.brandLogoSmall MS
    .searchContainer
      form#searchForm
        input#csrfInput(type="hidden", name="_csrf", value="#{csrfToken}")
        input#searchInput(type='search')
    .rightContainer
      .dateFilter
        a.protip#dateFilterButton(href='#', title="Filter Search By Date", data-pt-title="Filter Search By Date")
          i.material-icons date_range
      .looseSearch
        a#looseSearchButton.protip(href='#', title="Enable/Disable Search Loose", data-pt-title="Enable/Disable Search Loose")
          i#looseSearchIcon.material-icons
      .addPage
        a.protip#addPageButton(href='#', title="Add Page(s) To MarkSearch", data-pt-title="Add Page(s) To MarkSearch")
          i.material-icons add
      .settings-etal
        a.protip#settingsButton(href='#', title="MarkSearch Settings/Help", data-pt-title="MarkSearch Settings/Help")
          i.material-icons settings

  .subBar
    .dateFilterSettings.hide-not-i(data-is-shown='false')
      .fromToContainer
        .fromContainer.lightBlue
          span From:
          .formplate
            select.selectFromMonth
              option(value='placeholder') Month
              option(value='1') January
              option(value='2') February
              option(value='3') March
              option(value='4') April
              option(value='5') May
              option(value='6') June
              option(value='7') July
              option(value='8') August
              option(value='9') September
              option(value='10') October
              option(value='11') November
              option(value='12') December
          .formplate
            select.selectFromYear
              option(value='placeholder') Year
        .toContainer.lightBlue
          span To:
          .formplate
            select.selectToMonth
              option(value='placeholder') Month
              option(value='1') January
              option(value='2') February
              option(value='3') March
              option(value='4') April
              option(value='5') May
              option(value='6') June
              option(value='7') July
              option(value='8') August
              option(value='9') September
              option(value='10') October
              option(value='11') November
              option(value='12') December
          .formplate
            select.selectToYear
              option(value='placeholder') Year
      .shortcutsContainer
        .formplate
          select.shortcuts
            option(value='placeholder') Shortcuts
            option(value='Past 3 days') Past 3 days
            option(value='Past Week') Past Week
            option(value='Past Month') Past Month
            option(value='Past 3 Months') Past 3 Months
            option(value='Past 6 Months') Past 6 Months
            option(value='Past Year') Past Year
    .addPageUrls.hide-not-i(data-is-shown='false')
      textarea(placeholder="Paste URLs here")
      .progressInfo.hide
      .addUrlsProgress.hide
        .errorOKbutton.hide Ok
        .progressBar
      .addPageButtons
        .urlSaveButton Save URLs
        .urlCancelButton Cancel
    .settingsAndHelp.hide-not-i(data-is-shown='false')
      .settingsLinkButton Settings
      .helpAboutLinkButton Help/About